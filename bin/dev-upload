#!/usr/bin/env bash
#
# After running, verify the uploaded package is installable:
#   v=venv_$(date)
#   pip3 -m venv "$v"
#   source "$v/bin/activate"
#   pip3 install
#   pip install --index-url https://test.pypi.org/pypi/ --extra-index-url https://pypi.org/simple skelo

source $(dirname $0)/../dev

REQUIRES=(ROOT_DIR)
check_requires ${REQUIRES[@]}

python3 -m venv .venv
source $ROOT_DIR/.venv/bin/activate || die "Could not source the venv in $PWD/.venv"

python3 -m pip install --upgrade twine || die "Could not install twine"
python3 -m build

if [[ "$1" == '--test' ]]; then
  repository=testpypi
  shift
else
  repository=pypi
fi

python3 -m twine upload --repository "$repository" dist/* $@
exit $?
